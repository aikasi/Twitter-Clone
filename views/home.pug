extends base.pug

block content
    h4=user.id
    h4=user.email
    h4=user.password
    h4=user.nick
    h3 Tweet
    p ----------------------------------------------
    each tweet in tweets
        h3 tweet ID : #{tweet.id}
        if tweet.content
            h4 Content : #{tweet.content}
        if tweet.file
            div
                h4 Image
                img(src=tweet.file alt=tweet.file)
            h4 -------------------------------

    each info in user.tweet
        h4=info.tweetId

    a(href=`${routes.tweet}${routes.tweetCreate}`) Tweet