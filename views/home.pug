extends base.pug

block content
    h4=user.id
    h4=user.email
    h4=user.password
    h4=user.nick
    h3 Tweet

    each tweet in tweets
        h4=tweet.id
        if tweet.file
            div
                img(src=tweet.file alt=tweet.file)
            h4 -------------------------------

    each info in user.tweet
        h4=info.tweetId

    a(href=`${routes.tweet}${routes.tweetCreate}`) Tweet